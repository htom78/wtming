	      <% end %>
	      </ul>
	    </div>
	  <% end %>

	  <div class="field">
	    <%= f.label :title %><br />
	    <%= f.text_field :title %>
	  </div>

	  <div class="field">
	    <%= f.label :description %><br />
	    <%= f.text_area :description %>
	  </div>

	  <div class="field">
	    <%= f.label :tag_list %><br />
	    <%= f.text_field :tag_list %>
	  </div>

	  <div class="actions">
	    <%= f.submit %>
	  </div>
	<% end %>
	
</div>

               
 </div>


